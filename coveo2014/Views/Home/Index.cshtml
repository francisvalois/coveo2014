@model coveo2014.Models.PageModel<string>

@{
    ViewBag.Title = "Coveo Blitz 2014 - Les Chiens";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content" class="container">
    <div class="row">
        <div id="leftBar" class="col-md-1">

            @{
                foreach (var facet in Model.AvailableFacets)
                {
                    Html.RenderPartial("ListFacet", facet);
                }
            }
            
        </div>
        <div id="rightContent" class="col-md-11">
            <div id="contentTitle"class="row">
                <div class="col-md-12"><h1>Choisir un genre</h1></div>
            </div>
            <div id="contentSortChoice" class="row">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#">Popular</a></li>
                    <li><a href="#">A-Z</a></li>
                </ul>
            </div>
            
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <div class="genderBox">
                    <div class="albumsBox">
                        @for (int j = 0; j < 4; j++)
                        {
                            <div class="albumArt"><img class="albumArt" src="http://lorempixel.com/100/100/animals/@j"/></div>
                        }
                    </div>
                    <div class="row">
                        <div class="col-md-12">@Model.Items[i]</div>
                    </div>
                    <div class="row">
                        <div class=" artistList col-md-12">Artist 1, Artist2, Artist3</div>
                    </div>
                </div>
            }
            

        </div>
    </div>
</div>
